# MCP Server Configuration
# Copy this file to .env and fill in your specific values

# Server Configuration
MCP_HOST=localhost
MCP_PORT=8765
MCP_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIRECTORY=logs
LOG_RETENTION_DAYS=7
MAX_LOG_FILE_SIZE_MB=100

# System Monitoring Configuration
STATS_UPDATE_INTERVAL=2
PROCESS_MONITOR_LIMIT=10
MEMORY_ALERT_THRESHOLD=90
CPU_ALERT_THRESHOLD=80
DISK_ALERT_THRESHOLD=95
GPU_MEMORY_ALERT_THRESHOLD=90

# Security Configuration (if implementing authentication later)
# JWT_SECRET=your-secret-key-here
# API_KEY=your-api-key-here
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration (if adding persistence later)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mcp_monitor
# DB_USER=mcp_user
# DB_PASSWORD=your-password-here

# External Services (if integrating with external monitoring)
# WEBHOOK_URL=https://your-webhook-url.com
# SLACK_WEBHOOK=https://hooks.slack.com/services/...
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USER=your-email@example.com
# EMAIL_PASSWORD=your-app-password